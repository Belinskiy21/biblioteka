<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <br>
    <% if current_user %>

    <%= link_to_prev_page @books, 'Previous Page' %>
    <%= link_to_next_page @books, 'Next Page' %>

    <% end %>
    <% unless current_user %>
    <br>
    <h2 class="text-center">Welcome to Library!</h2>
    <%= image_tag("book.jpg", :alt => "book", style: "width:110%") %>
    <% end %>
    <% if notice %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
    <%end%>

    <% if current_user %>
    <h2>Books list:</h2>
    <table>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <p><%= book.title %></p>
              <%= image_tag(book.file.thumb.url, alt: 'Image', class:"img-responsive") if book.file? %>
              <p>
                <br>
                <%= link_to 'Show', book , class:"btn btn-primary btn-sm"%>
                <% if current_user.role == 'admin' %>
                <%= link_to 'Edit', edit_book_path(book), class:"btn btn-success btn-sm" %>
                <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %>
                <%= link_to 'Take book',edit_book_path(book), class:"btn btn-warning btn-sm"%>
                <% end %>
              </p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'Add new Book', new_book_path %>
    <% end %>

  </div>
  <div class="col-md-3">
    <br>
    <%= link_to 'Your History', new_book_path, class:"btn btn-info btn-sm" %>
  </div>
</div>
<br>
